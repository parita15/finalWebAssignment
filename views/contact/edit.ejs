<!--Importing the header file-->
<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Design for editing the contact -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the contact name"
                    name="contactName" 
                    value="<%= contact.contactName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="addressTextField">Contact Address</label>
                    <input type="text" class="form-control"
                    id="addressTextField"
                    placeholder="Enter the contact address"
                    name="contactAddress" 
                    value="<%= contact.contactAddress %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailAddressTextField">Email address</label>
                    <input type="email" class="form-control"
                    id="emailAddressTextField"
                    placeholder="Enter the email address"
                    name="emailAddress" 
                    value="<%= contact.emailAddress %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                    <a href="/contact-list/delete/<%= contact._id %>" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete</a>
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

<!--Importing the footer file-->
<%- include ../partials/bottom_nav.ejs %>  
<%- include ../partials/footer.ejs %>